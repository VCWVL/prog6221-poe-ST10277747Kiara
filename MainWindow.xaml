<Window x:Class="ProgPart3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Chatbot" Height="650" Width="794"
        Background="#121212" FontFamily="Segoe UI" 
        WindowStartupLocation="Manual"
        Top="0"
        Left="100">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Chat Area -->
            <RowDefinition Height="Auto"/>
            <!-- Input Area -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="🛡️ CYBERSECURITY CHATBOT 🛡️"
                   FontSize="28"
                   Foreground="Aqua"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,10"
                   TextAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.4"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- Chat Display Area -->
        <ScrollViewer Grid.Row="1"
                      Name="ChatScrollViewer"
                      VerticalScrollBarVisibility="Auto"
                      Background="#181818"
                      Margin="5,15,30,24"
                      Padding="10">
            <StackPanel Name="ChatStackPanel"/>
        </ScrollViewer>

        <!-- Input Area -->
        <DockPanel Grid.Row="2" Margin="5">
            <TextBox Name="InputTextBox"
         MinHeight="40"
         FontSize="16"
         Padding="10"
         Background="#222"
         Foreground="White"
         BorderBrush="Aqua"
         BorderThickness="1"
         KeyDown="InputTextBox_KeyDown"
         VerticalAlignment="Center"
         DockPanel.Dock="Left"
         Width="600"
         HorizontalAlignment="Left"/>

            <Button Name="SubmitButton"
                    Content="Send"
                    Background="DeepSkyBlue"
                    Foreground="White"
                    FontSize="16"
                    Width="100"
                    Margin="10,0,0,0"
                    Click="SubmitButton_Click"
                    VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</Window>
